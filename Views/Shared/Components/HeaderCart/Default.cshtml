@model List<WebApplication1.ViewModels.CartItemcs>

@if(Model!=null && Model.Count() > 0)
{
    @foreach(var item in Model)
    {
           <div class="col-lg-12">
                    <div class="shoping__cart__table">
        <table>
            <thead>
                <tr>
                    <td>Tên Sản Phẩm</td>
                            <td>Số Lượng</td>
                            <td>Đơn giá</td>
                    <td>Xóa<td>


                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="shoping__cart__item">
                        <img src="~/images/products/@item.product.Thumb" alt="">
                        <h5>@item.product.ProductName</h5>

                    </td>

                    <td class="shoping__cart__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="@item.product.Price.ToString("#,##0")VND>
                            </div>
                        </div>
                    </td>
                    <td class="shoping__cart__total">
                                <input data-mahh="@item.product.ProductId" data-dongia="@item.amount x @item.product.Price.ToString("#,##0")VND" />
                    </td>
                    <td class="shoping__cart__item__close">
                        <span class="icon_close"></span>
                    </td>
                </tr>
            </tbody>
        </table>
            </div>
        </div>
    }


}

